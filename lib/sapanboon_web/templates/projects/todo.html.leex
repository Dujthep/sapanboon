<div class="thermostat">
    <div class="bar <%= @mode %>">
        <a phx-click="toggle-mode"><%= @mode %></a>
    </div>
    <div class="controls">
        <span class="reading"><%= @val %></span>
        <button phx-click="dec" class="minus">-</button>
        <button phx-click="inc" class="plus">+</button>
    </div>
</div>
